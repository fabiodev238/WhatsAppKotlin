<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/userSelectionFragment">

    <fragment
        android:id="@+id/userSelectionFragment"
        android:name="com.example.whatsappkotlin.ui.whatsapp.login.UserSelectionFragment"
        android:label="fragment_user_selection"
        tools:layout="@layout/fragment_user_selection">
        <action
            android:id="@+id/action_userSelectionFragment_to_dashboardFragment"
            app:destination="@id/dashboardFragment" />
    </fragment>

    <fragment
        android:id="@+id/dashboardFragment"
        android:name="com.example.whatsappkotlin.ui.whatsapp.dashboard.DashBoardFragment"
        android:label="fragment_dash_board"
        tools:layout="@layout/fragment_dash_board">

        <argument
            android:name="userId"
            app:argType="string"
            app:nullable="false" />
    </fragment>
</navigation>